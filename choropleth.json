{
  "$schema": "https://vega.github.io/schema/vega/v4.json",
  "autosize": "pad",
  "padding": 5,
  "width": 500,
  "height": 300,
  "style": "cell",
  "data": [
    {
      "name": "source_1",
      "url": "https://raw.githubusercontent.com/shailajayadav/Visual-Analytics/master/losses2015_transformed.csv",
      "format": {"type": "csv", "parse": "auto"},
      "transform":[
         {"type": "aggregate",
         "groupby": ["State_Code","State_Abv"],
         "ops": ["sum"],
         "fields": ["Amount"],
          "as": ["Amount"]
         }]
    },
    {
      "name": "source_0",
      "url": "data/us-10m.json",
      "format": {"type": "topojson", "feature": "states"},
      "transform": [
        {
          "type": "lookup",
          "from": "source_1",
          "key": "State_Code",
          "fields": ["id"],
          "values": ["Amount", "State_Abv"]
        }
      ]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "size": {"signal": "[width, height]"},
      "fit": {"signal": "data('source_0')"},
      "type": "albersUsa"
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "quantize",
      "domain": [0, 0.15],
      "range": {"scheme": "blues", "count": 7}

    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "shape",
      "style": ["geoshape"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "fill": {"scale": "color", "field": "Amount"},
          "tooltip": {"signal": "{\"State\": ''+datum[\"State_Abv\"]+','+\"Total Amount:\" +' ' + datum[\"Amount\"]}"}
        },
        "hover": {"fill": {"value": "green"}}
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    }
  ],
  "scales": [
    {
      "name": "color",
      "domain": {"data": "source_0", "field": "Amount"},
      "range": "heatmap"
    }
  ],
  "legends": [{"fill": "color", "title": "Amount"}],
  "config": {"axisY": {"minExtent": 0}}
}
